<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.6.xsd">


    <changeSet id="20211230090222-1" author="jhipster">
        <createTable tableName="person">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="firstname" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="lastname" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="email" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="jhi_password" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="phone" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="userstatus" type="integer">
                <constraints nullable="true" />
            </column>
            <column name="id_attribute_id" type="bigint">
                <constraints unique="true" nullable="true" uniqueConstraintName="ux_person_id_attribute_id" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20211230090222-1-relations" author="jhipster">

    </changeSet>

    <changeSet id="20211230090222-1-data" author="jhipster" context="faker">
        <loadData
                file="db/changelog/liquibase/person.csv"
                separator=";"
                tableName="person">
            <column name="id" type="numeric"/>
            <column name="username" type="string"/>
            <column name="firstname" type="string"/>
            <column name="lastname" type="string"/>
            <column name="email" type="string"/>
            <column name="jhi_password" type="string"/>
            <column name="phone" type="string"/>
            <column name="userstatus" type="numeric"/>
            <column name="id_attribute_id" type="numeric"/>
        </loadData>
    </changeSet>

</databaseChangeLog>